@model MvcApplication1.Organization

@{
    Layout = "~/Views/Shared/_loggedIn.cshtml";
}

<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyA-xb-mlhTxjeOeIbZ4-ZAKONtii6Rm2C4&sensor=false"></script>
<script src="~/Scripts/maps.js"></script>
 @Scripts.Render("~/bundles/jqueryval")
  <div class="col-md-offset-1">  
    @using (Html.BeginForm("Add", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Organization</legend>
    <div class="form-group">
             <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Name">Name</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
    </div>
            <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Contact_fName">First Name</label>
                @Html.TextBoxFor(model => model.Contact_fName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Contact_fName)
            </div>
                </div>
    <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-4">
               <label for="Contact_lName">Last Name</label>
                @Html.TextBoxFor(model => model.Contact_lName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Contact_lName)
            </div>
        </div>

   <div class="form-group"> 
            <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Phone">Phone</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
       </div>
  <div class="form-group">  
           <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Street_Address">Street Address</label>
                @Html.TextBoxFor(model => model.Street_Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Street_Address)
            </div>
      </div>
   <div class="form-group"> 
            <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="City">City</label>
                @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.City)
            </div>
       </div>
    <div class="form-group">
           <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Province">Province</label>
                @Html.TextBoxFor(model => model.Province, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Province)
            </div>
        </div>
    <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-4">
                <label for="Country">Country</label>
                @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Country)
            </div>
        </div>
   <div class="form-group"> 
            <div class="col-xs-12 col-sm-10 col-md-4">
               <label for="Postal_Code">Postal Code</label>
                @Html.TextBoxFor(model => model.Postal_Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Postal_Code)
            </div>
       </div>
            <input type="hidden" name="latitude" id="latitude" value="" />
            <input type="hidden" name="longitude" id="longitude" value="" />
            
    
            <p>
                <input type="submit" id="create" value="Create" class="btn btn-primary" disabled/>
            </p>


        </fieldset>
    }

         <p>
                <input type="button" id="clear" class="btn btn-primary" value="Clear Form" onclick="clearForm()" />
            </p>

            <p>
                <input type="button" id="map" class="btn btn-primary" value="View Map" onclick="initializeMap()" />
            </p>
<div id="gmap" style="position:relative;top:50%;">

<div id="googleMap" style="width:400px;height:300px;"></div>

</div>

    </div>        

   


