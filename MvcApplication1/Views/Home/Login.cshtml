@model MvcApplication1.DBUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 @Scripts.Render("~/bundles/jqueryval")

    @ViewBag.Msg;
<div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-0.5">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Login</legend>

    <div class="form-group">                   
            <div class="editor-field col-xs-1 col-sm-1 col-md-1">
                <label class="control-label">Username:</label> 
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

    <div class="form-group">                               
            <div class="editor-field col-xs-1 col-sm-1 col-md-1">
                <label class="control-label">Password:</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
    </div>
            <p>
                <input type="submit" value="Login" class="btn" />
            </p>
        </fieldset>
    }
    </div>
    